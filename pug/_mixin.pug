mixin article(categoria, titulo, contenido)
	.articulo
		span.articulo__categoria=categoria
		h3.articulo__titulo=titulo
		p.articulo__descripcion=contenido
		//- a(href=link) Leer mas...

mixin caja(imagen, categoria, titulo, contenido, link)
	.caja
		.caja__imagen: img(src="../images/"+imagen)
		.caja__contenido
			span.caja__categoria=categoria
			h3=titulo
			p=contenido
			a(href=link) Leer mas...

mixin stats(contador, categoria)
	.stat
		h3=contador
		span=categoria